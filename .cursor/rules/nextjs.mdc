import { useAuth } from '@/lib/providers/StoreProvider'
import { redirect } from 'next/navigation'

export function AuthGuard({ children }: { children: React.ReactNode }) {
  const { isAuthenticated } = useAuth()

  if (!isAuthenticated) {
    redirect('/login')
  }

  return <>{children}</>
}
